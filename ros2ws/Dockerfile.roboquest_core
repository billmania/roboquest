FROM ros:humble-ros-base

LABEL version="25"
LABEL description="ROS2 RoboQuest core"
LABEL maintainer="Bill Mania <bill@manialabs.us>"
ARG DEBIAN_FRONTEND=noninteractive

RUN echo "source /opt/ros/humble/setup.bash" >> /etc/profile

RUN ln -sf /bin/bash /bin/sh

SHELL ["/bin/bash", "--login", "-c"]

RUN apt-get update \
    && apt-get dist-upgrade -y
RUN apt-get install -y \
    apt-utils \
    vim \
    v4l-utils \
    strace \
    lsof
RUN apt-get install -y \
    python3-colcon-ros \
    python3-rpi.gpio \
    python3-serial \
    network-manager \
    ros-humble-diagnostic-updater
RUN apt-get update \
    && apt-get install -y \
      libyaml-dev \
      python3-yaml \
      python3-ply \
      python3-jinja2 \
      libevent-dev \
      ros-humble-camera-ros \
      ros-humble-usb-cam
RUN apt-get update \
    && apt-get install -y python3-pip
RUN pip3 install smbus2

WORKDIR /root/.ros/camera_info
COPY src/roboquest_core/config/rq_camera_node0.yaml ArducamUSBCamera_ArducamUSB__base_scb_pcie_7d500000_pci_0_0_usb_0_0_1_1_1_0_0c45_6366_1280x960.yaml
COPY src/roboquest_core/config/ov5647_1280x960_calibration.yaml ov5647__base_soc_i2c0mux_i2c_1_ov5647_36_1280x960.yaml

WORKDIR /usr/src/ros2ws
RUN mkdir src

COPY src/rq_msgs src/rq_msgs/
COPY src/roboquest_core src/roboquest_core/

RUN source /opt/ros/humble/setup.bash \
    && colcon build

ENTRYPOINT ["/bin/bash", "--login"]
CMD ["/usr/src/ros2ws/src/roboquest_core/scripts/start.sh"]
